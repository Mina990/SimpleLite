<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <LinearLayout
        android:id="@+id/player_back"
        android:orientation="vertical"
        android:background="@drawable/round_card_drawable_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        tools:ignore="UselessParent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:layout_marginTop="4dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/mute_button"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_mute_button"
                android:scaleType="fitCenter"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@id/exo_rew"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_replay"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/video_options"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@id/exo_ffwd"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_forward"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_cast"
                android:alpha="0.4"
                android:scaleType="fitCenter"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            tools:ignore="UselessParent">


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/pip_button"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_pip"
                android:scaleType="fitCenter"
                android:layout_marginStart="6dp"
                android:layout_weight="1"/>


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/save_image"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_download"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/copy_video"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_copy"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>


            <!--video stuff -->



            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/open_video"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_open_browser"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/share_image"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_share_now"
                android:scaleType="fitCenter"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_hd_none"
                android:scaleType="fitCenter"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="4dp"
            android:layout_gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/exo_play"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/exo_icon_play"
                android:layout_marginEnd="6dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                tools:ignore="ContentDescription" />


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/exo_pause"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/exo_icon_pause"
                android:layout_marginEnd="6dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                tools:ignore="ContentDescription" />



            <TextView
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-medium"
                tools:text="00:04"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                tools:text="02:38"
                android:fontFamily="sans-serif-medium"
                tools:ignore="RelativeOverlap" />


            <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                app:played_color="@color/new_facebook"
                app:unplayed_color="#19FFFFFF"
                app:buffered_color="#19FFFFFF"
                app:scrubber_color="@color/white"
                app:scrubber_dragged_size="20dp"/>


            <TextView
                android:id="@+id/speed_start"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="1dp"
                android:text="1.00x"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="6dp"
                tools:ignore="ContentDescription,HardcodedText" />

        </LinearLayout>



    </LinearLayout>

</FrameLayout>
