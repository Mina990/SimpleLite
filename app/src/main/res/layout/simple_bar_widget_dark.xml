<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="@drawable/simple_bar_dark"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:id="@+id/simple_bar_profile"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fb_round_pin"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/simple_bar_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name_pro"
            android:textAppearance="@style/Toolbar.TitleText"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="12dp"
        tools:ignore="ObsoleteLayoutParam">

        <ImageView
            android:id="@+id/simple_bar_launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_simple_s"
            android:tint="@color/white"
            tools:ignore="ContentDescription,UseAppTint" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="12dp"
        tools:ignore="ObsoleteLayoutParam">

        <ImageView
            android:id="@+id/simple_bar_news_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_home"
            android:tint="@color/white"
            tools:ignore="ContentDescription,UseAppTint" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="12dp"
        tools:ignore="ObsoleteLayoutParam">

        <ImageView
            android:id="@+id/simple_bar_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_mess"
            android:tint="@color/white"
            tools:ignore="ContentDescription,UseAppTint" />

        <TextView
            style="@style/FacebookNotificationBarBadgeStyle"
            android:layout_alignTop="@+id/simple_bar_messages"
            android:layout_alignEnd="@+id/simple_bar_messages"
            android:elevation="1dp"
            android:visibility="invisible" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="12dp"
        tools:ignore="ObsoleteLayoutParam">

        <ImageView
            android:id="@+id/simple_bar_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_notify_tabs"
            android:tint="@color/white"
            tools:ignore="ContentDescription,UseAppTint" />

        <TextView
            style="@style/FacebookNotificationBarBadgeStyle"
            android:layout_alignTop="@+id/simple_bar_notifications"
            android:layout_alignEnd="@+id/simple_bar_notifications"
            android:elevation="1dp"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>